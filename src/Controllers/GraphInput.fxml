<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.GraphInputController">

    <children>
        <!-- ScrollPane on the left side, fills available space -->
        <ScrollPane fx:id="scrollPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="0.0">
            <content>
                <AnchorPane fx:id="graphContainer" minHeight="0.0" minWidth="0.0" />
            </content>
        </ScrollPane>

        <!-- GridPane on the right side -->
        <GridPane fx:id="controlPanel" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            </columnConstraints>

            <children>
                <Label fx:id="GraphMeasurementsLabel" alignment="CENTER" text="Enter graph measurements" GridPane.rowIndex="1" />
                <Label fx:id="enterVerticesLabel" text="Enter number of vertices:" GridPane.rowIndex="3" />
                <HBox alignment="CENTER_LEFT" prefHeight="91.0" prefWidth="200.0" spacing="10" GridPane.rowIndex="4">
                    <children>
                        <TextField fx:id="verticesField" prefWidth="90" />
                        <Button fx:id="enterButton" onAction="#onEnterVertices" text="Enter" />
                    </children>
               <GridPane.margin>
                  <Insets left="25.0" right="25.0" />
               </GridPane.margin>
                </HBox>

                <Label fx:id="enterEdgesLabel" text="Enter edges:" GridPane.rowIndex="6" />
                <HBox alignment="CENTER_LEFT" prefHeight="248.0" prefWidth="200.0" spacing="10" GridPane.rowIndex="7">
                    <children>
                        <TextField fx:id="edgeStartField" prefWidth="40" />
                        <Label text="---&gt;" />
                        <TextField fx:id="edgeEndField" prefWidth="40" />
                        <Button fx:id="addButton" onAction="#onAddEdge" text="Add" />
                    </children>
               <GridPane.margin>
                  <Insets left="10.0" right="10.0" />
               </GridPane.margin>
                </HBox>
            </children>
         <rowConstraints>
            <RowConstraints maxHeight="132.0" minHeight="19.0" prefHeight="19.0" />
            <RowConstraints maxHeight="139.0" minHeight="22.0" prefHeight="34.0" />
            <RowConstraints maxHeight="145.0" minHeight="23.0" prefHeight="72.0" />
            <RowConstraints maxHeight="145.0" minHeight="23.0" prefHeight="26.0" />
            <RowConstraints maxHeight="193.0" minHeight="33.0" prefHeight="33.0" />
            <RowConstraints maxHeight="193.0" minHeight="23.0" prefHeight="48.0" />
            <RowConstraints maxHeight="381.0" minHeight="21.0" prefHeight="21.0" />
            <RowConstraints maxHeight="482.0" minHeight="32.0" prefHeight="32.0" />
            <RowConstraints maxHeight="482.0" minHeight="124.0" prefHeight="333.0" />
         </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
